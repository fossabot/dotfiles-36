# ~/.mailcap

### TEXT ###
# HTML -> w3m
# http://jasonwryan.com/blog/2012/05/12/mutt/
text/html; w3m -I %{charset} -T text/html; copiousoutput

# PLAIN
text/plain; iconv -f %{charset} '%s'; copiousoutput

### APPLICATION ###
# ZIP -> Unar
application/zip; unar -o ${HOME}/Downloads '%s';
application/x-zip-compressed; unar -o ${HOME}/Downloads '%s';

# PDF -> XpdfReader
application/pdf; sh ${HOME}/bin/open_afile.sh '%s'; copiousoutput;

# MS-WORD -> w3m
application/msword; sh ${HOME}/bin/open_afile.sh '%s'; copiousoutput;
application/vnd.openxmlformats-officedocument.wordprocessingml.document; sh ${HOME}/bin/open_afile.sh '%s'; copiousoutput;

# MS-EXCEL -> w3m
application/vnd.ms-excel; sh ${HOME}/bin/open_afile.sh '%s'; copiousoutput;

# MS-POWERPOINT -> LibreOffice
application/vnd.openxmlformats-officedocument.presentationml.template; sh ${HOME}/bin/open_afile.sh '%s';
