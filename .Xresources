!! ~/.Xresources

!!
!! xterm
!!
!! 256 Colors
xterm*termName:           xterm-256color
!! UTF-8 encode
xterm*locale:             true
!! Use "Alt"
xterm*metaSendsEscape:    true
!! Scroll
xterm*saveLines:          2000
!! Clipboard
xterm*selectToClipboard:  true
!! Delete black border
xterm*borderWidth:        0
!! Font
xterm*faceName:           xft:DejaVu Sans Mono:bold:antialias=true
xterm*wideBoldFont:       fixed
xterm*faceSize:           15
xterm*scaleHeight:        1.1
!! Color Scheme - Molokai
*xterm*background:        #101010
*xterm*foreground:        #d0d0d0
*xterm*cursorColor:       #d0d0d0
*xterm*color0:            #101010
*xterm*color1:            #960050
*xterm*color2:            #66aa11
*xterm*color3:            #c47f2c
*xterm*color4:            #30309b
*xterm*color5:            #7e40a5
*xterm*color6:            #3579a8
*xterm*color7:            #9999aa
*xterm*color8:            #303030
*xterm*color9:            #ff0090
*xterm*color10:           #80ff00
*xterm*color11:           #ffba68
*xterm*color12:           #5f5fee
*xterm*color13:           #bb88dd
*xterm*color14:           #4eb4fa
*xterm*color15:           #d0d0d0

!!
!! rxvt-unicode (urxvt)
!!
!! General
!URxvt.geometry:           96x32
URxvt.geometry:           86x27
URxvt.scrollBar:          false
URxvt.scrollBar_right:    true
URxvt.scrollBar_floating: true
URxvt.scrollstyle:        plain
URxvt.cursorBlink:        true
!URxvt.cursorUnderline:    true
URxvt.pointerBlank:       true
URxvt.visualBell:         true
URxvt.saveLines:          3000
URxvt.fading:             40
!! Secondly screen scroll buffer
URxvt.secondaryScreen:    1
URxvt.secondaryScroll:    0
!! Fix some graphics drivers and in consequence redraw very slowly
URxvt*skipBuiltinGlyphs:  true
!! Perl
!! clopboad , clickURL
URxvt.perl-ext-common:    selection-to-clipboard,default,matcher
URxvt.url-launcher:       /usr/bin/xdg-open
URxvt.matcher.button:     1
!! Font list and Spacing
URxvt.font:               xft:Fira Code:bold:antialias=true:pixelsize=19,\
                          xft:IPAGothic
URxvt.letterSpace:        -1
!URxvt.lineSpace:          0
!! Color Scheme and Opacity - gruvbox-dark https://github.com/morhetz/gruvbox
